{% extends "base.twig" %}

{% block header %}
    <div style="background-image: url({{ Image(options.header) }});; z-index: 0;" class="pb-0 uk-background-cover uk-position-relative uk-padding uk-height-medium uk-flex uk-flex-center uk-flex-middle">
        <div  class="uk-position-cover"  style="background-color: #0C0C0C; opacity: .68; z-index: -1;"></div>

        <div class="text-center">
            <h1 class="uk-h2 uk-text-white uk-margin-remove">{{ post.title }}</h1>
        </div>
    </div>

{% endblock %}

{% block content %}

    <div class="uk-section uk-section-large uk-position-relative border-b-2">
        <div class="uk-padding-large uk-padding-remove-vertical">

            <div class="uk-grid-large" uk-grid="">

                <div class="uk-width-1-3@m uk-child-width-1-1">

                    <div class="uk-title uk-h2 uk-text-uppercase uk-text-black uk-margin-bottom">
                        {{ post.contact_title }}

                    </div>
                    <div>
                        {{ post.contact_desc }}
                    </div>


                </div>
                <div class="uk-width-2-3@m uk-child-width-1-1">

                    {{ post.contact_form|shortcodes }}

                </div>

            </div>
        </div>
    </div>


    {% include 'contact.twig' %}
{% endblock %}
{% extends "base.twig" %}

{% block header %}

    <div style="background-image: url({{ Image(options.header) }}); z-index: 0;" class="uk-background-cover uk-position-relative uk-slider">
        <div  class="uk-position-cover"  style="background-color: #0C0C0C; opacity: .68; z-index: -1;"></div>

        <div class="uk-responsive uk-slider-small">
            {{ post.content_slider|shortcodes }}
        </div>


        <div class="svg-rounded svg-to-bottom">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
                <path class="svg-fill-white" d="M615.2,96.7C240.2,97.8,0,18.9,0,0v100h1000V0C1000,19.2,989.8,96,615.2,96.7z"></path>
            </svg>
        </div>
    </div>

{% endblock %}


{% block content %}
    <div class="uk-section md:-mt-64">

        <div class="lg:p-32 p-4 uk-padding-remove-vertical pt-0">
            <div class="uk-child-width-1-1 uk-child-width-1-3@l uk-grid-large uk-grid-match uk-flex uk-flex-center" uk-grid="">
                {% for service in services %}

                <div>
                    <div class="uk-card uk-card-default uk-card-body uk-border-rounded-2 uk-box-shadow-large">
                        <h3 class="uk-h3 uk-truncate-overflow">{{ service.title }}</h3>
                        <div class="uk-truncate-overflow-4 uk-margin-medium-top uk-margin-medium-bottom uk-text-medium">
                            {{ service.content|excerpt(15) }}
                        </div>
                        <div class="uk-text-right">
                            <a href="{{ service.link }}" class="">Lire la suite</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

    </div>

    {% if post.list_catalogue %}
        <div class="uk-section uk-position-relative uk-section-large pb-0">
            <div class="uk-flex uk-flex-center uk-margin-bottom uk-padding-small uk-padding-remove-vertical">
                <div class="uk-width-1-2@l uk-width-1-1">
                    <div class="uk-title uk-h3  uk-color-primaire uk-text-center uk-text-uppercase">
                        {{ post.titre_cat }}
                    </div>
                    <div class="uk-subtitle uk-h3 uk-color-primaire uk-margin-remove-top uk-text-center">
                        {{ post.subtitre_cat }}
                    </div>
                </div>
            </div>
            <div class="uk-container uk-container-small uk-padding-large uk-padding-remove-horizontal">
                <div class="uk-child-width-1-3@l uk-child-width-1-1 uk-flex uk-flex-center uk-grid-match" uk-grid="">
                    {% for cat in catalogues %}
                        <div class="uk-transition-toggle">
                            <div class="uk-inline uk-dark uk-box-shadow-large">
                                <img src="{{ Image(cat.image) }}" alt="">
                                <div class="uk-overlay-default uk-position-cover">
                                    <div class="uk-position-center p-4 uk-text-center">
                                        <h3 class="uk-text-uppercase">{{ cat.name }}</h3>
                                    </div>
                                </div>
                                <div class="uk-transition-fade uk-position-cover uk-overlay uk-overlay-theme uk-flex uk-flex-center uk-flex-middle">
                                    <div>
                                        <h4 class="uk-title uk-text-center uk-text-uppercase">{{ cat.name }}</h4>

                                        <a href="{{ cat.link }}" class="uk-button uk-button-theme uk-width-1-1 uk-margin-top">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

    {% if produits %}

    <div class="uk-section uk-section-shop pt-0">

        <div class="uk-section uk-section-large uk-background-cover uk-position-relative" style="background-image: url({{ Image(options.shop_home) }}); z-index: 0;">

            <div  class="uk-position-cover"  style="background-color: #0C0C0C; opacity: .68; z-index: -1;"></div>

            <div class="svg-rounded svg-to-top">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
                    <path class="svg-fill-white" d="M0,0c0,0,0,6,0,6.7c0,18,240.2,93.6,615.2,92.6C989.8,98.5,1000,25,1000,6.7c0-0.7,0-6.7,0-6.7H0z"></path>
                </svg>
            </div>

            <div class="svg-rounded svg-to-bottom">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
                    <path class="svg-fill-white" d="M615.2,96.7C240.2,97.8,0,18.9,0,0v100h1000V0C1000,19.2,989.8,96,615.2,96.7z"></path>
                </svg>
            </div>

            <div class="uk-container uk-container-small uk-margin-medium-top">
                <div class="uk-flex uk-flex-center uk-margin-bottom uk-padding uk-padding-remove-horizontal">
                    <div class="uk-width-1-2@l uk-width-1-1">
                        <div class="uk-title uk-h3 uk-text-center uk-text-white uk-text-uppercase">
                            {{ post.titre_pro }}
                        </div>
                    </div>
                </div>

                <div class="uk-child-width-1-3@l uk-child-width-1-1 uk-flex uk-flex-center uk-grid-match" uk-grid="">

                    {%  for produit in produits %}

                    <div class="uk-transition-toggle">



                        <div class="uk-card uk-card-theme uk-border-rounded-2">
                            <a href="{{ produit.link }}"></a>
                                <div class="uk-card-media-top uk-flex uk-flex-center uk-padding">
                                    <img src="{{ produit.thumbnail.src }}" alt="" class="uk-height-small">
                                </div>
                            </a>
                        </div>


                        <div class="uk-position-relative uk-inline">
                            <div class="uk-card">
                                <div class="py-10 px-5">
                                    <h3 class="uk-card-title uk-text-white uk-truncate-overflow">{{ produit.title }}</h3>
                                    <div class="uk-margin">
                                        {% if produit.promo %}<span class="uk-text-green">{{ produit.prix_promo|number_format(0,',', ' ') }} FCFA</span> - {% endif %}
                                        <span class="{% if produit.promo %}line-through text-red-700 uk-text-small{% else %}uk-text-green{% endif %}">{{ produit.prix|number_format(0,',', ' ') }} FCFA</span>
                                    </div>
                                    <a href="#" class="uk-button uk-button-theme-2">Ajouter au panier</a>
                                </div>
                            </div>
                            <div class="uk-card uk-card-theme uk-transition-fade uk-position-cover uk-border-rounded-b">
                                <div class="py-10 px-5">
                                    <h3 class="uk-card-title uk-truncate-overflow"><a href="{{ produit.link }}" class="uk-text-black uk-link-reset">{{ produit.title }}</a></h3>
                                    <div class="uk-margin">
                                        {% if produit.promo %}<span class="uk-text-green">{{ produit.prix_promo|number_format(0,',', ' ') }} FCFA</span> - {% endif %}
                                        <span class="{% if produit.promo %}line-through text-red-700 uk-text-small{% else %}uk-text-green{% endif %}">{{ produit.prix|number_format(0,',', ' ') }} FCFA</span>

                                    </div>
                                    <a href="#" uk-toggle="target: #modal" class="uk-button uk-button-theme-2 add_cart" id="{{ produit.id }}">Ajouter au panier</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% endfor %}

                </div>
            </div>
        </div>

    </div>

    {% endif %}

    {% include 'contact.twig' %}

{% endblock %}
{% if  partenaires %}
    <div class="uk-background-theme uk-padding uk-padding-remove-horizontal">


        <div uk-slider="autoplay: true; finite: true">

            <div class="uk-position-relative uk-container uk-container-small">

                <div class="uk-slider-container">
                    <ul class="uk-slider-items uk-child-width-1-1 uk-child-width-1-4@m uk-grid uk-margin-remove">
                        {% for partenaire in partenaires %}
                            {% if partenaire.show_onliste %}
                                <li>
                                    <a href="{{ partenaire.website }}">
                                        <img src="{{ Image(partenaire.image) | resize(160, 110) }}" alt="" class="uk-border-rounded h-40">
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>

                <div class="">
                    <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                    <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
                </div>

            </div>

        </div>

    </div>
{% endif %}
<div class="uk-section uk-copyright">
    <div class="uk-container uk-container-small">
        <div class="uk-child-width-1-3@l uk-child-width-1-1" uk-grid>

            <div class="">
                <div class="uk-title uk-h3 uk-color-white uk-margin-remove-top">
                    Lien rapide
                </div>

                <ul class="uk-list">
                    {% for item in footer_quick.get_items %}
                        <li class="{{item.classes | join(' ')}}"><a href="{{ item.get_link }}" class="uk-link-reset">{{ item.title }}</a></li>
                    {% endfor %}
                </ul>

            </div>
            <div class="">
                <div class="uk-title uk-h3 uk-margin-remove-top">
                    Catalogue
                </div>

                <ul class="uk-list">
                    {% for item in all_cat %}
                        <li><a href="{{ item.link }}" class="uk-link-reset">{{ item.name }}</a></li>
                    {% endfor %}
                </ul>

            </div>

            <div>
                <div class="uk-title uk-h3 uk-margin-remove-top uk-text-center">
                   {{ site.title }}
                </div>

                <div class="uk-flex uk-flex-center">
                    <img src="{{ site.theme.link }}/img/logo.png" alt="">
                </div>

                <div class="uk-title uk-h3 uk-margin-remove-top uk-text-center">
                    Nous suivre
                </div>

                <ul class="uk-subnav uk-flex uk-flex-center" uk-margin>
                    {% if options.lienfacebook %}<li><a href="{{ options.lienfacebook }}" uk-icon="icon: facebook" class="uk-social-icon"></a></li> {% endif %}
                    {% if options.lienlinkedin %}<li><a href="{{ options.lienlinkedin }}" uk-icon="icon: linkedin" class="uk-social-icon"></a></li> {% endif %}
                    {% if options.lienwhatsapp %}<li><a href="{{ options.lienwhatsapp }}" uk-icon="icon: whatsapp" class="uk-social-icon"></a></li> {% endif %}
                    {% if options.lienyoutube %}<li><a href="{{ options.lienyoutube }}" uk-icon="icon: youtube" class="uk-social-icon"></a></li> {% endif %}
                    {% if options.lientwitter %}<li><a href="{{ options.lientwitter }}" uk-icon="icon: twitter" class="uk-social-icon"></a></li> {% endif %}
                    {% if options.lieninstagram %}<li><a href="{{ options.lieninstagram }}" uk-icon="icon: instagram" class="uk-social-icon"></a></li> {% endif %}
                </ul>
            </div>
        </div>

    </div>
</div>
<div class="uk-width-1-1 uk-background-theme uk-text-center uk-text-white uk-padding-small uk-padding-remove-horizontal uk-copyright text-sm">
    {{site.title}} | <span class="copyright">Copyright &copy; {{ "now"|date("Y") }}</span> <br> Designed by <a href="http://aligodu.cm" class="uk-link-muted uk-color-white">Aligodu</a>
</div>
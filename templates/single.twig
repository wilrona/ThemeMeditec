{% extends "base.twig" %}

{% block content %}
<section class="uk-container uk-margin-top uk-margin-bottom" role="region">
	<div uk-grid>
		<article class="uk-width-2-3@s uk-article post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<header>
				<h1 class="uk-article-title">{{post.title}}</h1>
				<p><span uk-icon="clock"></span> {{post.date | date}}</p>
			</header>
			{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" alt="{{post.thumbnail.alt}}">
			{% endif %}
			{{ post.content }}
		</article>
		<aside class="uk-width-1-3@s">
		{% include "sidebar.twig" %}
		</aside>
	</div>
</section>
</article>
{% endblock %}
 